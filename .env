# 币安API配置 - 账户A (多头)
BINANCE_API_KEY_A=your_api_key_a
BINANCE_SECRET_KEY_A=your_secret_key_a

# 币安API配置 - 账户B (空头)  
BINANCE_API_KEY_B=your_api_key_b
BINANCE_SECRET_KEY_B=your_secret_key_b

# 交易配置
